@model RepositoryDesignPattern.Core.Entities.Employee

@{
    ViewData["Title"] = "Add Employee";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Add Employee</h2>
    <form asp-action="AddEmployee" method="post" class="row g-3">
        <div class="col-md-6">
            <label asp-for="EmployeeId" class="form-label">Employee ID</label>
            <input asp-for="EmployeeId" class="form-control" placeholder="Enter Employee ID" />
            <span asp-validation-for="EmployeeId" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="EmployeeName" class="form-label">Employee Name</label>
            <input asp-for="EmployeeName" class="form-control" placeholder="Enter Employee Name" />
            <span asp-validation-for="EmployeeName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="EmployeeSalary" class="form-label">Employee Salary</label>
            <input asp-for="EmployeeSalary" class="form-control" placeholder="Enter Employee Salary" />
            <span asp-validation-for="EmployeeSalary" class="text-danger"></span>
        </div>
        <div class="col-12 text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
